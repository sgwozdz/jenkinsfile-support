{
  "name": "jenkinsfile",
  "displayName": "Jenkinsfile",
  "description": "[formerly JenkinsFile Support] Extension provides basic jenkinsfile support (highlighting, snippets and completion)",
  "version": "1.2.0",
  "license": "MIT",
  "author": {
    "name": "Szymon Gwóźdź",
    "email": "gwozdz@recode.dev"
  },
  "bugs": {
    "url": "https://github.com/sgwozdz/jenkinsfile-support/issues"
  },
  "icon": "images/icon.png",
  "publisher": "recode4dev",
  "engines": {
    "vscode": "^1.103.0"
  },
  "homepage": "https://github.com/sgwozdz/jenkinsfile-support",
  "repository": {
    "type": "git",
    "url": "https://github.com/sgwozdz/jenkinsfile-support.git"
  },
  "categories": [
    "Programming Languages",
    "Snippets"
  ],
  "keywords": [
    "jenkins",
    "jenkinsfile",
    "jdp"
  ],
  "activationEvents": [
    "onLanguage:jenkinsfile"
  ],
  "main": "./client/out/extension",
  "contributes": {
    "languages": [
      {
        "id": "jenkinsfile",
        "aliases": [
          "JenkinsFile",
          "Jenkins"
        ],
        "extensions": [
          ".jenkins",
          ".jenkinsfile"
        ],
        "filenames": [
          "jenkinsfile"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "jenkinsfile",
        "scopeName": "source.jenkins",
        "path": "./syntaxes/jenkinsfile.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "jenkinsfile",
        "scopeName": "source.jenkins",
        "path": "./snippets/snippets.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "tsc -b",
    "watch": "tsc -b -w",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
    "package": "npx @vscode/vsce package",
    "deploy": "npx @vscode/vsce publish",
    "format": "prettier --write \"**/*.{ts,js,json}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json}\"",
    "lint": "eslint \"**/*.{ts,js}\"",
    "lint:fix": "eslint \"**/*.{ts,js}\" --fix",
    "check": "npm run lint && npm run format:check",
    "fix": "npm run lint:fix && npm run format"
  },
  "devDependencies": {
    "@types/node": "24.3.1",
    "@typescript-eslint/eslint-plugin": "8.43.0",
    "@typescript-eslint/parser": "8.45.0",
    "@vscode/vsce": "3.6.0",
    "eslint": "9.35.0",
    "eslint-config-prettier": "10.1.8",
    "prettier": "3.6.2",
    "typescript": "5.9.2"
  }
}
