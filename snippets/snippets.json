{
  "source.jenkins": {
    "pipeline": {
      "prefix": "pipeline",
      "body": [
        "pipeline{",
        "    agent{",
        "        label \"${1:node}\"",
        "    }",
        "    stages{",
        "        stage(\"${2:Stage Name}\"){",
        "            steps{",
        "                echo \"========executing ${2}========\"",
        "            }",
        "            post{",
        "                always{",
        "                    echo \"========always========\"",
        "                }",
        "                success{",
        "                    echo \"========${2} executed successfully========\"",
        "                }",
        "                failure{",
        "                    echo \"========${2} execution failed========\"",
        "                }",
        "            }",
        "        }",
        "    }",
        "    post{",
        "        always{",
        "            echo \"========always========\"",
        "        }",
        "        success{",
        "            echo \"========pipeline executed successfully ========\"",
        "        }",
        "        failure{",
        "            echo \"========pipeline execution failed========\"",
        "        }",
        "    }",
        "}"
      ],
      "description": "pipeline"
    },
    "echo": {
      "prefix": "echo",
      "body": ["echo \"====++++${1:message}++++====\""],
      "description": "echo"
    },
    "stage": {
      "prefix": "stage",
      "body": [
        "stage(\"${1:Stage Name}\"){",
        "    steps{",
        "        echo \"====++++executing ${1}++++====\"",
        "    }",
        "    post{",
        "        always{",
        "            echo \"====++++always++++====\"",
        "        }",
        "        success{",
        "            echo \"====++++${1} executed successfully++++====\"",
        "        }",
        "        failure{",
        "            echo \"====++++${1} execution failed++++====\"",
        "        }",
        "",
        "    }",
        "}"
      ],
      "description": "stage"
    },
    "post": {
      "prefix": "post",
      "body": [
        "post{",
        "    always{",
        "        echo \"====++++always++++====\"",
        "    }",
        "    success{",
        "        echo \"====++++only when successful++++====\"",
        "    }",
        "    failure{",
        "        echo \"====++++only when failed++++====\"",
        "    }",
        "}"
      ],
      "description": "post"
    },
    "if": {
      "prefix": "if",
      "body": [
        "if (${1:condition}) {",
        "    ${2:// code to execute if true}",
        "} else {",
        "    ${3:// code to execute if false}",
        "}"
      ],
      "description": "if else"
    },
    "try": {
      "prefix": "try",
      "body": [
        "try {",
        "    ${1:// code to try}",
        "}",
        "catch (${2:exception}) {",
        "    ${3:// code to execute on exception}",
        "}"
      ],
      "description": "try catch"
    },
    "tryf": {
      "prefix": "tryf",
      "body": [
        "try {",
        "    ${1:// code to try}",
        "}",
        "catch (${2:exception}) {",
        "    ${3:// code to execute on exception}",
        "}",
        "finally {",
        "    ${4:// code to execute always}",
        "}"
      ],
      "description": "try catch finally"
    }
  }
}
